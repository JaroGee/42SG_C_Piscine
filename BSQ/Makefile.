CC = cc
CFLAGS = -Wall -Werror -Wextra

BUILD_DIR := ./build
SRC_DIRS := ./src

SRCS := $(shell find $(SRC_DIRS) -type f -name '*.c')
OBJS = $(SRCS:.c=.o)

TARGET = bsq

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $(TARGET)

%.o: %.c %.h
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: fclean
fclean:
	rm -f $(OBJS)

.PHONY: clean
clean:
	rm -f $(OBJS)